{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "lib": [
      "es2019"
    ]
  },
  "include": ["src/**/*", "__tests__/**/*"]
}